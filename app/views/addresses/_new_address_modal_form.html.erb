<%= form_for @address do |f| %>
  <div class="col-md-12 well">
    <div class="col-md-12">
      <%= f.label t "address.latitude" %>
      <%= f.text_field :lat, class: "form-control", id: "form-lat" %>
    </div>

    <div class="col-md-12">
      <%= f.label t "address.longitude" %><br/>
      <%= f.text_field :lon, class: "form-control", id: "form-lon" %>
    </div>

    <div class="col-md-12">
      <%= f.label t "address.capacity" %><br/>
      <%= f.text_field :capacity, class: "form-control", id: "form-lon" %>
    </div>

    <div class="col-md-12">
      <%= f.label t "address.contact" %><br/>
      <%= f.text_field :contact, class: "form-control", id: "form-lon" %>
    </div>

    <div class="col-md-12">
      <%= f.label t "address.description" %><br/>
      <%= f.text_field :description, class: "form-control", id: "form-lon" %>
    </div>
  </div>
  <div class="col-md-12 well">
    <%= f.submit t("address.new.button"), class: "btn btn-primary" %>
  </div>
<% end %>
