<div class="address">
  <div class="address-thumb">
    <%= image_tag_link adds_by_province %>
    <div class="address-id">
      <%= t "new_code" %> <%= adds_by_province.id %>
    </div>
  </div>
  <div class="address-details">
    <div class="title">
      <%= link_to adds_by_province.title, address_path(adds_by_province),
        title: "adds_by_province.title", class: "visit",
        data: {adds_by_province: adds_by_province.as_json.merge({
          image_tag: image_tag_link(adds_by_province)})} %>
    </div>
    <p><%= adds_by_province.address %></p>
    <p>
      <%= t "capacity" %>: <span class="capacity"><%= adds_by_province.capacity %>
      </span> |
      <%= t "contact" %>: <span class="contact"><%= adds_by_province.contact %></span>
    </p>
    <div class="more-info">
      <span class="glyphicon glyphicon-map-marker left icon-map"
        data-address-id="<%= adds_by_province.id %>" aria-hidden="true">
      </span>
      <span class="right">
        <%= adds_by_province.created_at.to_date.to_formatted_s(:long_ordinal) %>
      </span>
    </div>
  </div>
</div>
