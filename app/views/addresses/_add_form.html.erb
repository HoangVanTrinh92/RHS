<%= form_for @address, html: {multipart: true} do |f| %>
  <p>
    <%= f.label :latitude %><br />
    <%= f.text_field :lat, id: "form-lat" %>
  </p>
  <p>
    <%= f.label :longitude %><br />
    <%= f.text_field :lng, id: "form-lng" %>
  </p>
  <p>
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity %>
  </p>
  <p>
    <%= f.label :contact %><br />
    <%= f.text_field :contact %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <div id="image-fields">
    <%= f.fields_for :images do |photo| %>
      <%= render "image_fields", f: photo %>
    <% end %>
  </div>

  <%= link_to_add_fields t("Add_Image"), f, :images %>

  <p><%= f.submit %></p>
<% end %>
