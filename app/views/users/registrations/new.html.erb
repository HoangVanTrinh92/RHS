<%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
  <div class="col-md-7" id="signup_form">
    <form action="r" method="post" accept-charset="utf-8" class="form" role="form">
      <legend><%= t "Sign Up" %></legend>
      <h4><%= t "signup.banner" %></h4>
      <%= f.text_field :name, autofocus: true,
        class: "form-control input-sm", placeholder: t("signup.name") %>
      <%= f.email_field :email, class: "form-control input-sm",
        placeholder: t("signup.email") %>
      <%= f.password_field :password, autocomplete: "off",
        class: "form-control input-sm", placeholder: t("signup.password") %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "form-control input-sm", placeholder: t("signup.password_confirmation") %>
      <%= f.submit t("signup.submit"), class: "btn btn-info btn-block" %>
    </form>
    <%= link_to t("signup.to_signin"),
      new_user_session_path, class: "btn btn-success btn-block" %>
  </div>
<% end %>
